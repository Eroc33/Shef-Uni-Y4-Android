<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/galleryFragment">

    <fragment
        android:id="@+id/galleryFragment"
        android:name="uk.ac.shef.com4510.gallery.GalleryFragment"
        android:label="gallery_fragment"
        tools:layout="@layout/gallery_fragment">
        <action
            android:id="@+id/action_galleryFragment_to_detailsActivity"
            app:destination="@id/detailsActivity" />
        <action
            android:id="@+id/action_galleryFragment_to_cameraActivity"
            app:destination="@id/cameraActivity" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="uk.ac.shef.com4510.search.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="uk.ac.shef.com4510.map.MapFragment"
        android:label="MapFragment" />
    <activity
        android:id="@+id/cameraActivity"
        android:name="uk.ac.shef.com4510.camera.CameraActivity"
        android:label="CameraActivity"
        app:action="cameraAction" />
    <activity
        android:id="@+id/detailsActivity"
        android:name="uk.ac.shef.com4510.details.DetailsActivity"
        android:label="activity_details"
        app:action="detailsAction"
        tools:layout="@layout/activity_details">
        <argument
            android:name="imagePath"
            app:argType="string" />
    </activity>
</navigation>